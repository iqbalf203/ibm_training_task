<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>AddCourseServlet</servlet-name>
  	<display-name>AddCourseServlet</display-name>
  	<description></description>
  	<servlet-class>org.example.view.AddCourseServlet</servlet-class>
  	<init-param>
  		<param-name>courses</param-name>
  		<param-value>Cyber Security,Developer,Cloud Computing,BlockChain</param-value>
  	</init-param>
  </servlet>
  <servlet>
  	<servlet-name>ControllerServlet</servlet-name>
  	<display-name>ControllerServlet</display-name>
  	<description></description>
  	<servlet-class>org.example.controller.ControllerServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>SuccessServlet</servlet-name>
  	<display-name>SuccessServlet</display-name>
  	<description></description>
  	<servlet-class>org.example.view.SuccessServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ListCoursesServlet</servlet-name>
  	<display-name>ListCoursesServlet</display-name>
  	<description></description>
  	<servlet-class>org.example.view.ListCoursesServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AddStudentServlet</servlet-name>
  	<display-name>AddStudentServlet</display-name>
  	<description></description>
  	<servlet-class>org.example.view.AddStudentServlet</servlet-class>
  	<init-param>
  		<param-name>courses</param-name>
  		<param-value>Cyber Security,Developer,Cloud Computing,BlockChain</param-value>
  	</init-param>
  </servlet>
  <servlet>
  	<servlet-name>StudentControllerServlet</servlet-name>
  	<display-name>StudentControllerServlet</display-name>
  	<description></description>
  	<servlet-class>org.example.controller.StudentControllerServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>StudentSuccessServlet</servlet-name>
  	<display-name>StudentSuccessServlet</display-name>
  	<description></description>
  	<servlet-class>org.example.view.StudentSuccessServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>SearchCourseServlet</servlet-name>
  	<display-name>SearchCourseServlet</display-name>
  	<description></description>
  	<servlet-class>org.example.view.SearchCourseServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AddCourseServlet</servlet-name>
  	<url-pattern>/add_course.view</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ControllerServlet</servlet-name>
  	<url-pattern>/controller.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>SuccessServlet</servlet-name>
  	<url-pattern>/success.view</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ListCoursesServlet</servlet-name>
  	<url-pattern>/list_course.view</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AddStudentServlet</servlet-name>
  	<url-pattern>/add_student.view</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>StudentControllerServlet</servlet-name>
  	<url-pattern>/controller_student.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>StudentSuccessServlet</servlet-name>
  	<url-pattern>/success_student.view</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>SearchCourseServlet</servlet-name>
  	<url-pattern>/search_course.view</url-pattern>
  </servlet-mapping>
</web-app>
